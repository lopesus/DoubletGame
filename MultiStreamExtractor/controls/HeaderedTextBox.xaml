<UserControl x:Class="PhoneSpecsParser.controls.HeaderedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhoneSpecsParser.controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             MaxHeight="65" MinHeight="65"
             >
    <Grid>
        <GroupBox x:Name="groupBox" Header="{Binding Header, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Padding="5,5,5,5">
            <TextBox x:Name="textBox" Text="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" VerticalContentAlignment="Center" />
        </GroupBox>
    </Grid>
</UserControl>
