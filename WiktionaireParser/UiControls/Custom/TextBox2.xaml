<UserControl x:Class="WiktionaireParser.UiControls.Custom.TextBox2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WiktionaireParser.UiControls.Custom"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="300">
    <Grid Height="NaN">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Header, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TextBox2}}}" VerticalAlignment="Center" MinHeight="15" MinWidth="30" Margin="0,0,10,0" />
        <TextBox Text="{Binding Text2, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TextBox2}}}" VerticalContentAlignment="Center" Grid.Column="1"/>
    </Grid>
</UserControl> 