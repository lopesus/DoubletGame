<UserControl x:Class="WiktionaireParser.ui.CrossWordGridGen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WiktionaireParser.ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="63"/>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="2" OpacityMask="#FF8B2626">
            <Canvas x:Name="mainCanvas" Height="900" Width="900" Background="#FF8CA2A4"/>
        </Viewbox>
        <Button x:Name="cmdGenGrid" Content="gen grid" HorizontalAlignment="Left" Height="48" Margin="10,10,0,0" VerticalAlignment="Top" Width="84" Click="cmdGenGrid_Click"/>
        <Button x:Name="cmdPutNextWord" Content="NEXT WORD" HorizontalAlignment="Left" Height="48" Margin="120,10,0,0" VerticalAlignment="Top" Width="78" Click="cmdPutNextWord_Click"/>

    </Grid>
</UserControl>
